<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" title="Login" x="100" y="50" width="260" height="145" alpha="2.0" layout="absolute" creationComplete="usernameTextInput.setFocus()">
	<mx:VBox width="100%" height="100%" horizontalAlign="center" verticalAlign="middle" borderThickness="10" fontSize="12">
		<mx:HBox verticalAlign="middle">
			<mx:Label text="Username" width="75" textAlign="center"/>
			<mx:TextInput id="usernameTextInput" width="140" height="30%"/>
		</mx:HBox>
		<mx:HBox verticalAlign="middle">
			<mx:Label text="Password" width="75" textAlign="center"/>
			<mx:TextInput id="passwordTextInput" width="140" height="30%" displayAsPassword="true"/>
		</mx:HBox>
		<mx:Button id="loginButton" label="Login" enabled="{usernameTextInput.text.length &gt; 0 &amp;&amp; passwordTextInput.text.length &gt; 0}"/>
	</mx:VBox>
</mx:TitleWindow>
